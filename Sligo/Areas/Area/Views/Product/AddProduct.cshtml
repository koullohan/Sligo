@model Sligo.Areas.Area.Models.Product
@using (Ajax.BeginForm("CreateProduct", "Product", new { area ="Area"}, new AjaxOptions() { OnSuccess = "updateProductTable" }, null))
{           
    <div class="modal-dialog">
        <!-- Modal content-->               
        <div class="modal-content">                   
            <div class="modal-header">                       
                <button type="button" class="close" data-dismiss="modal">&times;</button>                        
                <h4 class="modal-title">New Product</h4>                   
            </div>                   
            <div class="modal-body">                      
                <div class="form-group">                           
                    <label for="productIdLabel" class="hidden">ProductId</label>                         
                    @Html.HiddenFor(m => m.Id, new { @class = "form-control input-sm", id = "productId", name = "product-id" })                       
                </div>                        
                <div class="form-group">                          
                    <label for="categoryIdLabel">Category</label>                                             
                    @Html.DropDownListFor(m => m.CategoryId, new SelectList(ViewBag.Categories, "Value", "Text"), "Select Category", new { @class = "form-control", id = "categoryId", name = "category-id", required = "required", autocomplete = "off" })                      
                </div>                       
                <div class="form-group">                           
                    <label for="manufacturerNameLabel">Manufacturer</label>                            
                    @Html.DropDownListFor(m => m.ManufacturerId, new SelectList(ViewBag.Manufacturers, "Value", "Text"), "Select Manufacturer", new { @class = "form-control", id = "manufacturerId", name = "manufacturer-id", required = "required", autocomplete = "off" })                       
                </div>                       
                <div class="form-group">                           
                    <label for="nameLabel">Name</label>                                              
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control input-sm", id = "name", name = "name", required = "required", autocomplete = "off" })                                       
                </div>                                       
                <div class="form-group">                                                                     
                    <label for="descriptionLabel">Description</label>                                                 
                    @Html.TextBoxFor(m => m.Description, new { @class = "form-control input-sm", id = "description", name = "description", required = "required", autocomplete = "off" })                                                         
                </div>                       
                <div class="form-group">                        
                    <label for="modelLabel">Model</label>                                             
                    @Html.TextBoxFor(m => m.Model, new { @class = "form-control input-sm", id = "model", name = "model", required = "required", autocomplete = "off" })                                       
                </div>                       
                <div class="form-group">                         
                    <label for="releasedDateLabel">Released Date</label>                        
                    @Html.TextBoxFor(m => m.ReleasedDate, new { @class = "form-control input-sm", id = "releasedDate", name = "released-Date", required = "required", autocomplete = "off" })                      
                </div>                        
                <div class="form-group">                           
                    <label for="releasedYearLabel">Released Year</label>                                            
                    @Html.TextBoxFor(m => m.ReleasedYear, new { @class = "form-control input-sm", id = "releasedYear", name = "released-Year", required = "required", autocomplete = "off" })                                      
                </div>                                                    
            </div>                               
            <div class="modal-footer">                                        
                <button type="submit" class="btn-save btn btn-default" value="Create">Create</button>                                        
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>                             
            </div>                      
        </div>               
    </div>       
}