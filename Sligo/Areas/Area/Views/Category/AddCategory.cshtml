@model Sligo.Areas.Area.Models.Category
@using (Ajax.BeginForm("CreateCategory", "Category", new { area = "Area" }, new AjaxOptions() { OnSuccess = "updateCategoryTable" }, null))
{
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">New Category</h4>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label for="categoryIdLabel" class="hidden">Id</label>
                    @Html.HiddenFor(m => m.Id, new { @class = "form-control input-sm", id = "categoryId", name = "category-id" })
                </div>
                <div class="form-group">
                    <label for="nameLabel">Name</label>
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control input-sm", id = "name", name = "name", required = "required", autocomplete = "off" })
                </div>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn-save btn btn-default" value="Create">Create</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
}
